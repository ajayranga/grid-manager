{
  "name": "grid-manager",
  "version": "1.0.0",
  "main": "backend/index.ts",
  "author": "Ajay <ajay.ranga.mr.unique@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "16.17.1"
  },
  "scripts": {
    "backend": "ts-node-dev --cls --respawn backend/index --ignore /client/*",
    "seed": "ts-node backend/chartDataSeed",
    "installDep": "yarn --cwd client && yarn",
    "heroku-postbuild": "yarn run installDep && yarn run build-frontend",
    "frontend": "yarn --cwd client run start",
    "build-frontend": "yarn --cwd client run build",
    "dev": "NODE_ENV=development concurrently -n \"backend,frontend\" -c \"red,yellow\" \"yarn run backend\" \"yarn run frontend\"",
    "start": "yarn run build-frontend && NODE_ENV=production ts-node backend/index"
  },
  "dependencies": {
    "apicache": "^1.6.3",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "concurrently": "^7.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "yarn": "^1.22.19"
  }
}
